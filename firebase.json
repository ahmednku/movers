{
  "hosting": {
    "public": ".",
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/services",
        "destination": "/services.html"
      },
      {
        "source": "/blogs",
        "destination": "/blogs.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/messages",
        "destination": "/messages.html"
      }
    ],
    "cleanUrls": true,
    "errorPage": "/404.html",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
